    <!--welcome pages-->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <listener>
        <listener-class>common.ComListener</listener-class>
    </listener>
    <filter>
        <filter-name>ComFilter</filter-name>
        <filter-class>common.ComFilter</filter-class>
        <init-param>
            <param-name>loginpath</param-name>
            <param-value>index.html</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ComFilter</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>
